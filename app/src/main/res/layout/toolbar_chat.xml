<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/themecolor"
    android:fitsSystemWindows="true"
    app:contentInsetLeft="@dimen/toolbar_content_inset_start"
    app:contentInsetStart="@dimen/toolbar_content_inset_start"
    app:layout_scrollFlags="enterAlways"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/content_description"
            android:padding="@dimen/dp10"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp5"
            android:visibility="visible"
            android:src="@drawable/arow"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_height="@dimen/dp40"
            android:layout_width="@dimen/dp40"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            android:contentDescription="@string/content_description"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp10"
            android:src="@drawable/needyy"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="vertical">

            <com.needyyy.app.views.AppTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Display Name"
                android:textStyle="bold"
                android:textSize="@dimen/sp18"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>
            <com.needyyy.app.views.AppTextView
                android:id="@+id/tv_lastseen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/user_name"
                android:layout_below="@+id/user_name"
                android:textSize="@dimen/sp12"
                android:textColor="#FFFFFF"
                android:text="Last Seen"
               />
        </RelativeLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/dp10"
            android:layout_marginRight="@dimen/dp5"
            android:id="@+id/anonomous_chat"
            android:src="@drawable/anonymous_chat"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:id="@+id/video_call"
            android:visibility="gone"
            android:src="@drawable/video_calling"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp10"
            android:id="@+id/audio_call"
            android:visibility="gone"
            android:src="@drawable/adio_calling"/>

    </LinearLayout>
</android.support.v7.widget.Toolbar>
