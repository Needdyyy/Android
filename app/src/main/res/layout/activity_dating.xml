<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Modules.Dating.DatingActivity">

    <include layout="@layout/toolbar_normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="click"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp12"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp13">

                    <TextView
                        style="@style/SortFilterTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAXIMUM DISTANCE" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4">

                        <TextView
                            style="@style/SortFilterTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:hint="0 km" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:hint="130 km"
                            android:textColor="@color/colorAccent" />

                    </RelativeLayout>

                    <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                        android:id="@+id/rangeSeekbar8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:bar_color="@color/tvbackgroudgray"
                        app:bar_highlight_color="@color/colorAccent"
                        app:left_thumb_image="@drawable/white_circle" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp12"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp13">

                    <TextView
                        style="@style/SortFilterTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AGE RANGE" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4">

                        <TextView
                            android:id="@+id/minimumdistanceTv"
                            style="@style/SortFilterTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:hint="18 Years" />

                        <TextView
                            android:id="@+id/maximumdistanceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:hint="26 Years"
                            android:textColor="@color/colorAccent" />

                    </RelativeLayout>

                    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                        android:id="@+id/rangeSeekbar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:bar_color="@color/tvbackgroudgray"
                        app:bar_highlight_color="@color/colorAccent"
                        app:left_thumb_image="@drawable/white_circle"
                        app:right_thumb_image="@drawable/white_circle" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp12"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp14">

                    <TextView
                        style="@style/SortFilterTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skills" />

                    <EditText
                        android:id="@+id/etMessage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp50"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@drawable/border_rectangle_light_blue"
                        android:gravity="center_vertical"
                        android:hint="Active listening skill"
                        android:padding="@dimen/dp5" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp12"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp13">

                    <TextView
                        style="@style/SortFilterTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender" />

                    <RadioGroup
                        android:id="@+id/set_radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp12"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp27"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/dp10"
                            android:text="@string/male"
                            android:textSize="@dimen/sp15" />

                        <RadioButton
                            android:id="@+id/onse_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp27"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/dp10"
                            android:text="@string/female"
                            android:textSize="@dimen/sp15" />

                        <RadioButton
                            android:id="@+id/two_sets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/dp10"
                            android:text="@string/both"
                            android:textSize="@dimen/sp15" />

                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sp12"
                android:layout_marginEnd="@dimen/sp12"
                android:background="@drawable/ripple_effect"
                android:text="@string/apply"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>