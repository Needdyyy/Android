<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Modules.Login.Fragments.SignUpFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_username"
                android:layout_marginTop="@dimen/dp10">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_username"
                    android:drawableStart="@drawable/name_icon"
                    android:drawablePadding="@dimen/dp15"
                    android:hint="User Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorAccent" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_mobile"
                android:layout_marginTop="@dimen/dp15">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/calling_icon"
                    android:drawablePadding="@dimen/dp15"
                    android:hint="Mobile Number"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:id="@+id/edt_mobile"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_email"
                android:layout_marginTop="@dimen/dp15">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="@dimen/dp15"
                    android:hint="Email ID"
                    android:maxLines="1"
                    android:id="@+id/edt_email"
                    android:paddingStart="@dimen/dp15"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="@dimen/dp15"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_password"
                android:layout_marginTop="@dimen/dp15">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="@dimen/dp15"
                    android:hint="Password"
                    android:maxLines="1"
                    android:id="@+id/edt_password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_dob"
                android:layout_marginTop="@dimen/dp15">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/birthday"
                    android:drawableEnd="@drawable/calander"
                    android:drawablePadding="@dimen/dp10"
                    android:hint="DOB"
                    android:editable="false"
                    android:focusable="false"
                    android:maxLines="1"
                    android:id="@+id/edt_dob"
                    android:inputType="date"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:textColorHint="@color/colorPrimary" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/gender"
                    android:drawableEnd="@drawable/dropdown"
                    android:drawablePadding="@dimen/dp10"
                    android:focusable="false"
                    android:hint="@string/gender"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp10"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/sp14" />

                <Spinner
                    android:id="@+id/spinner_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@drawable/spinner_rect"
                    android:drawableStart="@drawable/gender"
                    android:drawableEnd="@drawable/dropdown"
                    android:drawablePadding="16dp"
                    android:entries="@array/gender_array"
                    android:hint="@string/city"
                    android:imeOptions="actionDone"
                    android:paddingStart="@dimen/dp15"
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp"
                    android:paddingEnd="@dimen/dp15"
                    android:paddingBottom="13dp"
                    android:visibility="gone">

                </Spinner>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15">

                <AutoCompleteTextView
                    android:id="@+id/edt_current_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/city"
                    android:drawablePadding="@dimen/dp10"
                    android:hint="@string/add_current_city"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/sp14"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:padding="@dimen/dp15"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_signup"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/bg_login_text"
                android:padding="@dimen/dp15"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ffffff"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_an_account_login"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Login"
                    android:id="@+id/tv_login"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
