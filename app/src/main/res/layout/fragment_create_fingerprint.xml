<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="5"
        app:cardBackgroundColor="@color/themecolor"
        android:background="@color/themecolor">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/dp10"
            android:id="@+id/img_back"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:src="@drawable/arow"/>

        <com.needyyy.app.views.AppTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:id="@+id/tv_startmsg"
            android:padding="@dimen/dp10"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:text="@string/letsstart"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            />
    </android.support.v7.widget.CardView>
    <com.needyyy.app.views.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:padding="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/tv_hintmsg"
        android:layout_marginBottom="@dimen/dp10"
        android:text="@string/putfingermsg"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/circularProgressbar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:layout_gravity="center"
            android:progress="0"
            android:max="100"
            android:secondaryProgress="100"
            android:progressDrawable="@drawable/circle_progress" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/img_finger"
            android:src="@drawable/fingerprint_gray_without_name"/>

    </FrameLayout>
    <com.needyyy.app.views.AppTextView
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login_text"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp40"
        android:paddingTop="@dimen/dp10"
        android:padding="@dimen/dp15"
        android:gravity="center"
        android:paddingBottom="@dimen/dp10"
        android:text="Done"
        android:textAlignment="center"
        android:visibility="gone"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

</LinearLayout>