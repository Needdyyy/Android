<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_post_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_pageprofile"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp10"
                android:src="@drawable/gray_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_gravity="start|center_vertical"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_placename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Surya singh at appsquadz techonology"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_pagecreation_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp3"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:text="time duration" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_blue_curve"
                android:paddingLeft="@dimen/dp10"
                android:paddingTop="@dimen/dp5"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp5"
                android:text="Follow"
                android:id="@+id/tv_follow"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_add_post"
            style="@style/HintTextStyle"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:hint="What's on your mind?"
                android:layout_gravity="top"
                android:gravity="top"
                android:imeOptions="actionDone"
                android:imeActionLabel="Done"
                android:ellipsize="end"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#333333" />
        </android.support.design.widget.TextInputLayout>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/webView"
            android:layout_marginRight="@dimen/dp10"></WebView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp180"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:visibility="gone"
            android:scaleType="center"
            android:id="@+id/imageviewmap"
            android:src="@drawable/needyy"
            android:layout_marginRight="@dimen/dp10"/>
        <TextView
            android:id="@+id/tv_post_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login_text"
            android:layout_marginTop="@dimen/dp70"
            android:layout_marginBottom="@dimen/dp70"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:text="POST"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>
