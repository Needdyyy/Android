<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8">

    <android.support.v7.widget.CardView
        android:id="@+id/upperCard"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="@dimen/dp3">

        <RelativeLayout
            android:id="@+id/upperCardReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/reportAbuseTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/crossimageIV"
                android:gravity="center|start"
                android:maxLines="2"
                android:layout_marginLeft="5dp"
                android:text="Help us understand what\'s Happening"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/crossimageIV"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp3"
                android:padding="@dimen/dp12"
                android:src="@drawable/white_cross" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/wrongTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp7"
        android:layout_weight="1"
        android:gravity="start"
        android:padding="@dimen/dp2"
        android:text="What\'s wrong with this post?"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reasonListReport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp10"
        android:layout_weight="5"
        android:overScrollMode="never" />

    <EditText
        android:id="@+id/writefeedbackET"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp10"
        android:layout_weight="2.5"
        android:background="@drawable/bg_edittext"
        android:gravity="top"
        android:hint="Write your feedback here"
        android:minHeight="@dimen/dp80"
        android:padding="@dimen/dp5"
        android:textSize="18sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/colorAccent" />

    <android.support.v7.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/dp3">

        <RelativeLayout
            android:id="@+id/bottomCardReportSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/submitTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp7"
                android:gravity="center"
                android:padding="@dimen/dp2"
                android:text="submit"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/heading_text_size" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>