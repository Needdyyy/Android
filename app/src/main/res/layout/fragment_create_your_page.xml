                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/rg_gender"
