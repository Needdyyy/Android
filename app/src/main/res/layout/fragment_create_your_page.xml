                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:padding="@dimen/dp5"
                    android:background="@drawable/bg_gray_curve"
                    android:id="@+id/etbudget"
