<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="right">
    <TextView
        android:id="@+id/olddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginBottom="@dimen/dp10"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/chatdate"
        android:textColor="@color/white"
        android:visibility="gone"/>


    <RelativeLayout
        android:layout_below="@+id/olddate"
        android:id="@+id/Rv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


       <RelativeLayout
           android:id="@+id/layout_msg_image"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tvMessage"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:textColor="@color/white"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingLeft="20dp"
               android:textSize="15dp"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:justificationMode="inter_word"
               android:layout_alignParentRight="true"
               android:background="@drawable/message_out"
               android:layout_marginLeft="60dp"
               android:layout_marginRight="10dp"/>



           <ImageView
               android:visibility="gone"
               android:id="@+id/ivImage"
               android:layout_width="200dp"
               android:layout_height="250dp"
               android:layout_alignParentRight="true"
               android:padding="10dp"
               android:layout_marginLeft="60dp"
               android:layout_marginRight="10dp"
               android:layout_centerHorizontal="true"/>

       </RelativeLayout>

        <TextView
            android:id="@+id/tvMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 minute ago"
            android:textColor="#4b4b4b"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:textSize="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:justificationMode="inter_word"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/layout_msg_image"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You missed a call"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/message_call"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </RelativeLayout>


</RelativeLayout>